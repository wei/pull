{
  "name": "pull",
  "version": "1.0.0",
  "description": "",
  "author": "Wei He <github@weispot.com> (https://whe.me)",
  "license": "ISC",
  "repository": "https://github.com/wei/pull.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_BASE64 | base64 -d) npm start",
    "lint:fix": "standard --fix",
    "test": "standard && jest",
    "test:watch": "jest --watchAll --notify --notifyMode=change --coverage",
    "deploy": "now --public -e WEBHOOK_SECRET=$WEBHOOK_SECRET -e PRIVATE_BASE64=\"$PRIVATE_BASE64\" --token=$NOW_TOKEN && now alias --token=$NOW_TOKEN && now scale pull.now.sh sfo1 1 --token=$NOW_TOKEN && now rm pull --safe -y --token=$NOW_TOKEN"
  },
  "dependencies": {
    "joi": "^13.3.0",
    "js-yaml": "^3.11.0",
    "node-fetch": "^2.1.2",
    "probot": "^6.2.0",
    "probot-config": "^0.1.0",
    "probot-scheduler": "^1.1.0"
  },
  "devDependencies": {
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "smee-client": "^1.0.1",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
